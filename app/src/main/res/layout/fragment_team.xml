<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TeamFragment">


    <GridLayout android:id="@+id/team_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="3">


        <ImageButton
            android:id="@+id/btn_alexandre"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@color/black"
            android:scaleType="fitXY"
            android:src="@drawable/alexandre" />

        <ImageButton
            android:id="@+id/btn_barbara"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@color/black"
            android:scaleType="fitXY"
            android:src="@drawable/barbara"/>

        <ImageButton
            android:id="@+id/btn_goncalo"
            android:layout_width="10dp"
            android:scaleType="fitXY"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@color/black"
            android:src="@drawable/goncalo"/>

        <ImageButton
            android:id="@+id/btn_pedro"
            android:scaleType="fitXY"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@color/black"
            android:src="@drawable/pedro"/>

        <ImageButton
            android:id="@+id/btn_rafael"
            android:scaleType="fitXY"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@color/black"
            android:src="@drawable/rafael"/>

        <ImageButton
            android:id="@+id/btn_ricardo"
            android:scaleType="fitXY"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@color/black"
            android:src="@drawable/ricardo"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>